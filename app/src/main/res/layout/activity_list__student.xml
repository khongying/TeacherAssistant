<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_list__student"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team.bsru.lottae.teacherassistant.List_Student"
    android:background="@drawable/bg_bytae2">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar4"
        app:logo="@drawable/back"
        app:title="@string/stu"
        app:titleTextColor="@android:color/darker_gray" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar4">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center">

                <TextView
                    android:text="@string/num"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/holo_purple"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:text="@string/code"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/holo_purple"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textAlignment="viewStart" />

                <TextView
                    android:text="@string/name"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@android:color/holo_purple"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textAlignment="viewStart" />

            </LinearLayout>
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_stu" />
    </LinearLayout>
</RelativeLayout>
